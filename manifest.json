{
  "manifest_version": 3,
  "name": "Tab Keeper & Request Recorder",
  "version": "1.0",
  "description": "Chặn đóng tab và ghi lại HTTP requests để debug. Block tab closing and record HTTP requests for debugging. © Đoàn Duy Nhất",
  "permissions": [
    "storage",
    "webRequest",
    "downloads",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["locales/*.json"],
      "matches": ["<all_urls>"]
    }
  ]
}