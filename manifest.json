{
  "manifest_version": 3,
  "name": "Tab Keeper & Request Recorder",
  "version": "0.0.3",
  "description": "Chặn đóng tab, ghi lại HTTP requests, Copy Mode, Translate Mode, Sheets Highlighter. © Đoàn Duy Nhất",
  "permissions": [
    "storage",
    "webRequest",
    "downloads",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bergamot/offline-dictionary.js", "content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["locales/*.json", "bergamot/*.js", "bergamot/*.wasm", "api-tester.html", "api-tester.js", "zabbix-pdf.html", "zabbix-pdf.js", "jspdf.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}